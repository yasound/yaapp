{% load i18n %}
{% if request.user.is_authenticated %}

<div class='row common-background'>

    <div class='span12 no-margin invite'>
        <h1>{% trans "Invite your friends" %}</h1>
        <ul>
            <li>
                <div id='invite-facebook'>
                    <a href='#'>{% trans "Invite your facebook friends" %}</a
                </div>
            </li>
            <li>
                <div id='invite-twitter'>
                    <a href='#' target='_blank'>{% trans "Invite your friends with twitter" %}</a>
                </div>
            </li>
            <li>
                <div id='invite-email'>
                    <a href='#'>{% trans "Invite your friends by email" %}</a
                </div>
            </li>
        </ul>
        <div class='separation-line'></div>
    </div>

    <div class='span12 no-margin '>
        <h1>{% trans "People you follow" %} (<span id='friends-count'></span>)</h1>
        <ul id='results'>
        <img class='loading-mask' src='/media/images/loading-white.gif'/>
        </ul>
        <div class='cell-pagination' id='pagination'></div>
        <div class='separation-line'></div>
    </div>

    <div class='span12 no-margin'>
        <h1>{% trans "People following you" %} (<span id='followers-count'></span>)</h1>
    </div>
    <div class='span12 no-margin '>
        <ul id='followers'>
        <img class='loading-mask' src='/media/images/loading-white.gif'/>
        </ul>
        <div class='cell-pagination' id='followers-pagination'></div>
    </div>

</div>
{% else %}
<div class='row'>
    <div class='span12'>
    	<div class='friends-login-container'>
    		<img class='friends-login-large'src="/media/app/images/friends-icon-large.png" height='230' width='260'>
            <img class='friends-login-small'src="/media/app/images/friends-icon-large.png" height='153' width='173'>
    		<p class='friends-login-p'>{% trans "Log in to view your friends." %}</p>
            <form action='{% url webapp_login app_name %}' method='get'>
    		<button id='login-btn'>{% trans "Login" %}</button>
            </form>
    	</div>
    </div>
</div>
{% endif %}