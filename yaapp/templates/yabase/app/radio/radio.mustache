{% load i18n %}
   <div id='webapp-radio-picture' class='thumbnail'>
       <img src="<% picture %>" width="210px" height="210px"/>
       <div id='webapp-title-radio'>
          <h2><% name %> {% trans "by" %} 
          <a href='/app/profile/<%#creator%><% username %>/'><% name %><%/creator%></a>
          </h2>
       </div>
   </div>
   <div id='webapp-radio-title'>
        <div class='favorites-nbr-container'>
          <span class='favorites-nbr'><% favorites %></span>
          <img src="/media/app/images/star-small-gradient.png">
          <div class='favorites-txt'>{% trans "favorites" %}</div>
        </div>
        {% if request.user.is_authenticated %}
        <a class="btn" id='btn-favorite'>
          <img src='/media/app/images/star-small-white.png' />
          <span>{% trans 'Add to favorite' %}</span>
        </a>
        <a class="btn" id='btn-unfavorite'>
          <img src='/media/app/images/star-small-grey.png' />
          <span>{% trans 'Remove from favorite' %}</span>
        </a>
        {% endif %}
   </div>
	<ul id='radio-actions-container'>
		<a class='wall-first-child' href="#"><li><img class='actions-btn' src="/media/app/images/radio/radio-icon-embed.png"/>intégrer la radio sur mon site</li></a>
		<a href="#"><li class='wall-single-line'><img class='actions-btn' src="/media/app/images/radio/radio-icon-share.png"/>partager le titre</li></a>
		<a href="#"><li class='wall-single-line'><img class='actions-btn' src="/media/app/images/radio/radio-icon-heart.png"/>j'aime le titre</li></a>
		<a href="#"><li class='wall-single-line'><img class='actions-btn' src="/media/app/images/radio/radio-icon-settings.png"/>modifier les paramètres</li></a>
		<a href="#"><li class='wall-single-line'><img class='actions-btn' src="/media/app/images/radio/radio-icon-music.png"/>mettre à jour la playlist</li></a>
		<a class='wall-last-child' href="#"><li><img class='actions-btn' src="/media/app/images/radio/radio-icon-message.png"/>envoyer un message aux auditeurs</li></a>
	</ul>