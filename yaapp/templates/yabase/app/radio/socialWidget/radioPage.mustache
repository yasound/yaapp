{% load i18n %}
{% load thumbnail %}
{% load app_url %}
<header class='social-header'></header>

<div class="container-fluid social-sub-header">
  <a href="{% url webapp_default %}" target="_blank" class='powered-by-yasound' title="{% trans 'powered by YaSound' %}">{% trans 'powered by YaSound' %}</a>
  <h1>{{ radio.name }}</h1>
</div>

<div class="wall container-fluid content-zone last">
  <div class="row-fluid">
    <div class="span4 wall-left-col">
      <div class="wall-aside">
        <div id='radio-side'>
        {% if radio %} {% include "yabase/app/radio/socialWidget/radio.mustache" %} {% endif %}
        </div>
        <div class="wall-aside-block">
          <h2 class="wall-aside-title">{% trans "Listening to the radio" %} (<span class='listener-count'>0</span>)</h2>
          <ul class="wall-profiles" id='listeners'></ul>
          <div class="clearfix"></div>
          <div class="wall-link-more"><a href="{% if radio %}{% app_url webapp_listeners app_name radio.uuid %}{% endif %}" id='more-listeners'>{% trans "View all" %}</a></div>
        </div>

        <div class="wall-aside-block">
          <h2 class="wall-aside-title">{% trans "Added in favorites" %} (<span class='fan-count'>0</span>)</h2>
          <ul class="wall-profiles" id='fans'>
          </ul>
          <div class="clearfix"></div>
          <div class="wall-link-more"><a href="#" id='more-fans'>{% trans "View all" %}</a></div>
        </div>

        <div class="wall-aside-block">
          <h2 class="wall-aside-title">{% trans "Radio creator" %}</h2>
          <div class="wall-owner-container">
          {% if radio %} {% include "yabase/app/radio/radioCreator.mustache" with creator=radio.creator.get_profile %} {% endif %}
          </div>
        </div>
      </div>
    </div>
    <div class="span8 wall-right-col">
      <div class="wall-input-container">
        <a class="pic pic-circle pic-wide" href="#"><img src="{% if user.is_authenticated %}{% url user_custom_picture request.user.username '45x45' %}{% else %}/media/images/avatars/default_45x45.png{% endif %}" width="45" height="45" alt=""></a>
        <form class="wall-input">
          <textarea placeholder="{% trans 'Express yourself...' %}"></textarea>
          <input class="btn-coral" type="submit" value="{% trans 'Publish' %}" />
        </form>
      </div>
      <div id='wall'>
        {% for event in wall_events %}
         <div class='wall-event-container'>
            {% ifequal event.event_type 'like' %}
              {% include 'yabase/app/radio/wallEventLike.mustache' %}
            {% else %}
              {% include 'yabase/app/radio/wallEventMessage.mustache' %}
            {% endifequal %}
          </div>
        {% endfor %}
      </div>
      <div id='pagination-wall'></div>
    </div>
  </div>
</div>



<div class="modal hide fade" id="modal-report-abuse">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">×</button>
        <h3>{% trans "Confirm report as abuse" %}</h3>
    </div>
    <div class="modal-body">
        <p>{% trans "Do you really want to report this message as an abuse?" %}
        </p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">{% trans "No thank you" %}</a>
        <a href="#" class="btn btn-primary">{% trans "Yes i want" %}</a>
    </div>
</div>

<div class="modal hide fade" id="modal-delete-message">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">×</button>
        <h3>{% trans "Confirm delete message" %}</h3>
    </div>
    <div class="modal-body">
        <p>{% trans "Do you really want to delete this message?" %}
        </p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">{% trans "No thank you" %}</a>
        <a href="#" class="btn btn-primary">{% trans "Yes i want" %}</a>
    </div>
</div>

<div class="modal hide fade" id="modal-broadcast">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">×</button>
        <h3>{% trans "Broadcast message to your fans" %}</h3>
    </div>
    <div class="modal-body">
        <textarea placeholder="{% trans 'Your message' %}"></textarea>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">{% trans "Dismiss" %}</a>
        <a href="#" class="btn btn-primary">{% trans "Send now" %}</a>
    </div>
</div>

</div>

