{% load i18n %}
<div class='radio-with-stats'>
    <div class='radio-cell-parent'>
    </div>
    <div class='radio-toolbar'>
        <button class='btn-coral right delete-radio'>
            <span class=''>{% trans "Delete" %}</span>
        </button>
        <button class='btn-sky right edit-playlist'>
            <span class=''>{% trans "Programming" %}</span>
        </button>
        <button class='btn-sky right edit-radio'>
            <span class=''>{% trans "Settings" %}</span>
        </button>
    </div>
    <div class='stats'>
		<div class='minutes-spent'>
	    	<em class=''><% overall_listening_time_minutes %></em>
			<span class=''>{% trans "Minutes of music played" %}</span>
		</div>
		<div class='new-messages'>
			<em class=''><% new_wall_messages_count %></em>
		    <span class=''>{% trans "New messages" %}</span>
		</div>
    </div>
    <div class='responsive-radio-toolbar'>
        <button class='responsive-delete-icon'>
            <img src="/media/app/images/responsive-icon-delete.png">
        </button>
        <button class='responsive-playlist-icon'>
            <img src="/media/app/images/responsive-icon-playlist.png">
        </button>
        <button class='responsive-settings-icon'>
            <img src="/media/app/images/responsive-icon-settings.png">
        </button>
    </div>
    <div class="chartdiv" style="width: 450px; height: 200px; padding: 0px; position: relative;">
    </div>
</div>