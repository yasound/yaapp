{% load i18n %}
<div id='programming-filters'></div>
<div id='playlist-actions'>
    {% ifequal app_name 'deezer' %}
    <button class='yabutton-small' id='export-deezer-all'>{% trans "Export all to Deezer" %}</button>
    <button class='yabutton-small' id='export-deezer'>{% trans "Export selection to Deezer" %}</button>

    <div id='progress' class="progress progress-striped active" style="display:none;">
      <div class="bar" style="width: 0%"></div>
    </div>

    {% endifequal %}
    <button class='yabutton-small' id='remove-all'>{% trans "Remove all songs" %}</button>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>{% trans "Track" %}</th>
            <th>{% trans "Album" %}</th>
            <th>{% trans "Artist" %}</th>
            <th>{% trans "Action" %}</th>
        </tr>
    </thead>
    <tbody id='song-instances'>
        <tr class='loading-mask'>
            <td><img  src='/media/images/loading.gif'/></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>
<div class='cell-pagination' id='pagination'></div>


<div class="modal hide fade" id="modal-remove-all">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">Ã—</button>
        <h3>{% trans "Remove all" %}</h3>
    </div>
    <div class="modal-body">
        <p>{% trans "Do you really want to remove all filtered titles ?" %}
        </p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">{% trans "No thank you" %}</a>
        <a href="#" class="btn btn-primary">{% trans "Yes i want" %}</a>
    </div>
</div>
