{% load i18n %}

<div class="modal hide fade" id="modal-export-deezer">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">×</button>
        <h3>{% trans "Export selection to deezer" %}</h3>
    </div>
    <div class="modal-body">
        <p>{% trans "Do you want to export the selected tracks to deezer ? " %}</p>
        <p>{% trans 'Enter a deezer playlist name:' %}</p>
        <input placeholder={% trans 'Deezer playlist' %}/>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">{% trans "No thank you" %}</a>
        <a href="#" class="btn btn-primary">{% trans "Yes i want" %}</a>
    </div>
</div>

<div class="container-fluid content-zone">
  <div class="programming-header row-fluid">
    <div class="span6">
      <i class="asset-programming"></i>
      <hgroup>
        <h2 class="headline2">Gestion de la programmation</h2>
        <h1 class="headline1">de <a href="#">Radio</a></h1>
      </hgroup>
    </div>
    <div class="span6">
      <ul>
        <li class="headline2">35 morceaux</li>
        <li class="headline1">1h32 de musique</li>
      </ul>
      <a class="programming-cover" href="#">
        <img src="http://placehold.it/70x70" width="70" height="70" alt="" />
      </a>
    </div>
  </div>
</div>

<div class="container-fluid content-zone last">
  <div class="programming-body row-fluid">
    <div class="span12">
      <hgroup>
        <h2 class="headline1">Ajoutez de la musique à votre radio</h2>
        <h3 class="headline2">à partir de notre base de musique Yasound</h3>
      </hgroup>
      <h3 class="headline2">Pour ajouter des <strong>suggestions par genre</strong> cliquez sur les étiquettes ci-dessous</h3>
      <h3 class="headline2">Importez des titres à partir des <strong>sources suivantes</strong></h3>
    </div>
  </div>
</div>

<div class="container-fluid content-zone">
  <div class="row-fluid">
    <div class='span12'>
        <div class='btn-group right' id='programming-top-toolbar'>
            <button type="button" class='yabutton-small' id='listen-btn'>{% trans 'Listen now' %}</button>
            <button type="button" class='yabutton-small' id='edit-settings-btn'>{% trans 'Settings' %}</button>
        </div>
        <h1>{% trans "Programming" %}</h1>
        <div id='radio'></div>
    </div>
  </div>
</div>

<div class="container-fluid content-zone last">
  <div class="row-fluid">
    {% comment %}

    <div class='span3 no-margin'>
        <div id='programming-menu'>
            <ul class="">
              <li class="header">{% trans "Default playlist" %}</li>
              <li class="active" id='programming-btn'><span>{% trans "Programming" %}</span></li>
              <li id='status-btn'><span>{% trans "History" %}</span></li>
            </ul>
        </div>

    </div>
    {% endcomment %}
    <div class='span12' id='playlist'>
    </div>

    <div class='span9' id='status' style='display:none'/>
</div>
</div>