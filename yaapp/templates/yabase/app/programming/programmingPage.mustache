{% load i18n %}

<div class="modal hide fade" id="modal-export-deezer">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">Ã—</button>
        <h3>{% trans "Export selection to deezer" %}</h3>
    </div>
    <div class="modal-body">
        <p>{% trans "Do you want to export the selected tracks to deezer ? " %}</p>
        <p>{% trans 'Enter a deezer playlist name:' %}</p>
        <input placeholder={% trans 'Deezer playlist' %}/>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">{% trans "No thank you" %}</a>
        <a href="#" class="btn btn-primary">{% trans "Yes i want" %}</a>
    </div>
</div>


<div class='row  programming-container'>
    <div class='span12 no-margin'>

        <div class='btn-group right' id='programming-top-toolbar'>
            <button type="button" class='yabutton-small' id='listen-btn'>{% trans 'Listen now' %}</button>
            <button type="button" class='yabutton-small' id='edit-settings-btn'>{% trans 'Settings' %}</button>
        </div>
        <h1>{% trans "Programming" %}</h1>
        <div id='radio'></div>
        <hr/>
    </div>

    {% comment %}

    <div class='span3 no-margin'>
        <div id='programming-menu'>
            <ul class="">
              <li class="header">{% trans "Default playlist" %}</li>
              <li class="active" id='programming-btn'><span>{% trans "Programming" %}</span></li>
              <li id='status-btn'><span>{% trans "History" %}</span></li>
            </ul>
        </div>

    </div>
    {% endcomment %}
    <div class='span12' id='playlist'>
    </div>

    <div class='span9' id='status' style='display:none'/>
</div>