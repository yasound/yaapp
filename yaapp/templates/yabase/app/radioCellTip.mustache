{% load i18n %}
<div class="radio-cell-tip">
  <div class="arrow"></div>
  <div class="content">
    <div class="metrics">
      <div class="metrics-left">
        <i class="asset-player-star-yellow"></i>
        <strong><% favorites %></strong>
        <span>favoris</span>
      </div>
      <div class="metrics-right">
        <i class="asset-comment"></i>
        <strong>X</strong>
        <span>messages</span>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="current-track">
      <strong class="headline">En cours de lecture</strong>
      <div class="track-info">
        <img src="http://placehold.it/20x20" width="20" height="20" alt="" />
        <strong>Action Branson</strong>
        <span>Money, power & respect</span>
      </div>
    </div>
    <div class="main-button">
      <a href="#" class="btn-green">Afficher la radio</a>
    </div>
  </div>
</div>