{% load i18n %}
<div class='row'>

  <div class='span12' id='user-profile'>
    <button class='yabutton-large right' id='all-my-radios'>{% trans 'All my radios' %}</button>
    <h2>{% trans "My radios" %}</h2>
  </div>

  <div class='span12'>
    <h2>{% trans "My radios" %}</h2> 
    <ul class='radio-cells' id='profile-radios'>
      <li id='own-radio'>
      </li>        
    </ul>  
  </div>
  
  <div class='span12' id='favorites-zone'>
    <button class='yabutton-large right' id='favorites-btn'>{% trans 'All my favorites' %}</button>
    <h2>{% trans "My favorites" %}</h2>
    <ul class='radio-cells' id='favorites'>
    </ul>  
  </div>

  <div class='span12' id='friends-zone'>
    <button class='yabutton-large right' id='friends-btn'>{% trans 'All my friends' %}</button>
    <h2>{% trans "My friends" %}</h2>
    <ul class='' id='friends'>
    </ul>  
  </div>
</div>