{% load i18n %}
<div class='radio-cell'>
    <div class='picture'>
    <img src='/media/app/images/radio/radio-album-cover.png'/>
    </div>
    
    <div class='mask' style='display:none;'>
    </div>
    
    <div class="profile">
        <img src='<% picture %>' width='32px' height='32px'/>
        <span class="radio-profile-picture-mask"><img src="/media/app/images/radio/radio-profile-picture-mask.png" width="28" height="28" alt="Radio Profile Picture Mask"></span>
    </div>
    <div class='caption'>
        <div class="caption-content">
            <h5><% name %></h5>
            <ul class="radio-favorites">
                <li>123</li>
                <li>1859</li>
            </ul>
        </div>
    </div>
</div>