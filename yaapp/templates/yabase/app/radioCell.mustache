{% load i18n %}
<article class="radio-cell">
  <a class="radio-cell-link" href="{{root}}radio/<% slug %>/">
    <div class="radio-cell-img"><img width="150" height="150" alt="" src="<% picture %>" /></div>
    <div class="radio-cell-info">
      <%#genre%><div class="tag"><% genre_display %></div><%/genre%>
      <i class="play asset-player-play"></i>
      <div class="tip-btn">Infos</div>
      </div>
    </div>
  </a>
  <h1><a href="{{root}}radio/<% uuid %>/"><% name %></a></h1>
</article>