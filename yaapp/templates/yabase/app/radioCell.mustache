{% load i18n %}
<article class="radio-cell">
  <a class="radio-cell-link" href="{{root}}radio/<% uuid %>/">
    <div class="radio-cell-img"><img width="150" height="150" alt="" src="<% picture %>" /></div>
    <div class="radio-cell-info">
      <div class="tag"></div>
      <i class="play asset-player-play"></i>
      <div class="fav"><i class="asset-player-star-yellow"></i><% favorites %></div>
      <div class="share"><i class="asset-player-share"></i></div>
    </div>
  </a>
  <h1><a href="{{root}}radio/<% uuid %>/"><% name %></a></h1>
</article>