{% load i18n %}
{% load app_url %}
{% load thumbnail %}



    <div id='radio-cover'>
        <img src="<% radio_picture %>" width="76" height="76" alt="<% radio_name %>"/>
        <div id="play-btn-large" class='play'>
            &nbsp;
        </div>
     </div>

    <div id='metadata-container'>
        <div id='radio-title'>
            <span id='title'><% radio_name %></span>
            <div class='button-group'>

                <a id="favorite-radio" class='yatooltip is-not-favorite' href="#">
                  <span class="yatoolelt">{% trans "Favorites" %}</span>
                </a>

                <a id="share-btn" class='yatooltip' data-toggle="modal" href="#modal-share">
                  <span class="yatoolelt">{% trans "Share" %}</span>
                </a>

            </div>

        </div>
        <div id='player-title'>
            <div id="radio-picto">
                <a href="{% app_url webapp_radio app_name current_uuid %}">

                    {% if yasound_song %}
                    <img id='track-image' src='{% if yasound_song.cover_url %}{{ yasound_song.cover_url }}{% else %}{{ yasound_song.album.cover_url }}{% endif %}' width="32" height="32" alt="{{ yasound_song.title|default:'<% title_wrapped %>' }}">
                    {% else %}
                    <img id='track-image' src='<% cover %>' width="32" height="32" alt="{{ yasound_song.title|default:'<% title_wrapped %>' }}">
                    {% endif %}
                </a>
            </div>
            <span id='track-title'>{{ yasound_song.title|default:'<% title_wrapped %>' }}</span>

            <div class='button-group'>
                <a href="#" id="love-btn" class='yatooltip-share'>
                  <span class="yatoolelt-share">{% trans "Like song" %}</span>
                </a>

                <a href="<% buy_link %>" id="shop-btn" class='yatooltip' target="_blank">
                    <span class="yatoolelt">{% trans "Buy on iTunes" %}</span>
                </a>

            </div>
        </div>
    </div>

</div>

<div class="nav-collapse">
    <div class='pull-right'>

        <div id="sound-level">
            <div id="min-level">
                <img src="/media/app/images/lower-volume.png" width="8" height="10" alt="Lower Volume">
            </div>

            <div id='slider-container'>
                <span class="tooltip"></span>
                <div id="volume-slider"></div>
                <span class="volume"></span>
            </div>

            <div id="max-level">
                <img src="/media/app/images/higher-volume.png" width="11" height="11" alt="Higher Volume">
            </div>
            <div class="responsive-volume-btn">
                    <img src="/media/app/images/responsive-lower-volume.png">
            </div>
            <div class="responsive-volume-btn">
                <img src="/media/app/images/responsive-higher-volume.png">
            </div>
        </div>


        <div id='user-menu'>


            {% if request.user.is_authenticated %}
            <div id="profile-picture">
               {% if user_profile.picture %}
                   {% thumbnail user_profile.picture "28x28" format='PNG' crop='center' as im %}
                    <a href='{% app_url webapp_profile app_name request.user.username %}' class='yatooltip'>
                        <img src="{{ im.url  }}" width="28" height="28" alt="Profile Picture"/>
           <div id='profile-box-container' class='hidden'>
            <div>
              <button id='my-profile-btn'>{% trans "My profile" %}</button>
              <button id='my-settings-btn'>{% trans "My settings" %}</button>
              <button id='logout-btn'>{% trans "Logout" %}</button>
            </div>
           </div>
                    </a>
                   {% endthumbnail %}
               {% else %}
                    <a href='{% app_url webapp_profile app_name request.user.username %}' class='yatooltip'>
                        <img src="/media/images/default_image.png" width="28" height="28" alt="Profile Picture"/>
           <div id='profile-box-container' class='hidden'>
            <div>
              <button id='my-profile-btn'>{% trans "My profile" %}</button>
              <button id='my-settings-btn'>{% trans "My settings" %}</button>
              <button id='logout-btn'>{% trans "Logout" %}</button>
            </div>
           </div>
                    </a>

               {% endif %}


            </div>
            <div>
                <a id="messages-btn" class="header-notification yatooltip" href="{% app_url webapp_notifications app_name %}">
                    <span class="badge badge-info {% ifequal notification_count 0 %}hidden{% endifequal %}" id="message-position-absolute">{{ notification_count }}</span>
                </a>
            </div>
            <div class="header-notification" id="last-social-btn">
    <div id="hd-button" class='<%#hd%>hd-enabled<%/hd%><%^hd%>hd-disabled<%/hd%>'>
       <div id='hd-box-container' style='display:none;'>
        <div id='hd-status'>
          <label for='hd-checkbox'>{% trans "HD" %}  <span id='hd-expiration-date'>{% if hd_expiration_date %}({% trans "enabled until" %} {{ hd_expiration_date|date:"DATE_FORMAT" }})</span> {% endif %}</label>
            <div id="hd-checkbox-container">
                <input type='checkbox' id='hd-checkbox' {% if hd_enabled %}checked='checked'{% else %}disabled=""{% endif %}>
            </div>
        </div>
        <div id='hd-promocode'>
          <label for='promocode'>{% trans "Enter a promo code:" %} </label>
          <input type='input' name='promcode'>
        </div>

        <div id='gifts-container'>
            <ul id='gifts'>
                <img class='loading-mask' src='/media/images/loading-black.gif'/>
            </ul>
            <div id='pagination'></div>
        </div>
       </div>
    </div>
            </div>
            {% else %}
            <div id='login'>
              <a class='float-left' id='signup-btn' href='{% app_url webapp_signup app_name %}'>{% trans 'Signup' %}</a>
          <div class="header-separation"><img src="/media/app/images/header-separation.png" width="4" height="54" alt="Header Separation"></div>
          <a class='float-left login-btn' id='login-btn' href='{% app_url webapp_login app_name %}'>{% trans 'Login' %}</a>
          <div id='login-box-container' class='hidden'>
            <a id='login-btn-facebook' href="{% url socialauth_begin 'facebook' %}?next={{ root }}" rel="nofollow"><img src="/media/app/images/login/login-icon-facebook.png"><span>{% trans "Login with Facebook" %}</span></a>
            <a id='login-btn-twitter' href="{% url socialauth_begin 'twitter' %}?next={{ root }}{{ next }}" rel="nofollow"><img src="/media/app/images/login/login-icon-twitter.png"><span>{% trans "Login with Twitter" %}</span></a>
            <div class='login-separation-line'></div>
            <form id='popup-login-form' method='post' action="{% app_url webapp_login app_name %}">{% csrf_token %}
              <span>{% trans "Email login" %}</span>
              <input placeholder="{% trans 'Email' %}" type="email" required="required" name="email">
              <input placeholder="{% trans 'Password' %}"class="right-input" required="required" type="password" name="password">
              <input type='hidden' name='action' value='login'/>
              <input id='login-btn-connection' type='submit' value='Connexion'/>
            </form>
            <a class="login-psw-lost" href='{% url lost_password %}'>{% trans "Lost password ?" %}</a>
          </div>
            </div>

          <div id='hd-without-login'>
          <div id="hd-button" class='<%#hd%>hd-enabled<%/hd%><%^hd%>hd-disabled<%/hd%>'>
             <div id='hd-box-container' style='display:none;'>
              <div id='hd-status'>
                <label for='hd-checkbox'>{% trans "HD" %}</label>
                  <div id="hd-checkbox-container">
                      <input type='checkbox' id='hd-checkbox' {% if hd_enabled %}checked='checked'{% else %}disabled=""{% endif %}>
                  </div>
              </div>

              <div id='hd-promocode'>
                <label for='promocode'>{% trans "Enter a promo code:" %} </label>
                <input type='input' name='promcode'>
              </div>

              <div id='gifts-container'>
                  <ul id='gifts'>
                      <img class='loading-mask' src='/media/images/loading-black.gif'/>
                  </ul>
                  <div id='pagination'></div>
              </div>
             </div>
          </div>
        </div>

            {% endif %}
        </div>
    </div>

