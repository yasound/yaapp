{% load i18n %}
{% load app_url %}

<div class="container-fluid content-zone">
    <div class='row-fluid'>
        <div class='span12 signup-container'>
            <h1>{% trans "Password reset" %}</h1>
        </div>
    </div>
</div>

<div class="container-fluid content-zone last">
    <div class='row-fluid'>
        <div class='span12 signup-container'>
            <div class='signup-input'>
            <form id='passreset-form' method='post'>{% csrf_token %}
            <fieldset>
              {{form}}
            </div>
            <div class='row-fluid signup-container'>
                <div class='span12 signup-input'>
                    <input id="signup-save-btn" type="submit" value="{% trans 'Reset' %}" />
                </div>
            </div>
            </fieldset>
            </form>
        </div>
    </div>
    <div class='row-fluid signup-container'>
        <div class='span12'>
            <a href='{% app_url webapp_signup app_name  %}' id='signup-now'>{% trans 'No account? Register now' %}</a>
        </div>
    </div>
</div>

<div class="modal hide fade" id="modal-after-passreset">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">Ã—</button>
        <h3>{% trans "An email was sent to you" %}</h3>
    </div>
    <div class="modal-body">
        <p>{% blocktrans %}An email has been sent to reset your password.
        {% endblocktrans %}
        </p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn btn-primary" data-dismiss="modal">{% trans "Home" %}</a>
    </div>
</div>
