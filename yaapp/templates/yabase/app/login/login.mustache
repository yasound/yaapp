{% load i18n %}
{% load app_url %}

<div class="container-fluid content-zone">
    <div class='row-fluid'>
        <div class='span12 signup-container'>
            <h1>{% trans "Welcome to Yasound" %}</h1>
            <h2>{% trans 'Login with Facebook or Twitter' %}</h2>
        </div>
    </div>
    <div class='row-fluid signup-container'>
        <div class='span6'>
            <div class='social-btn'>
            {% if external_login %}
                <a class='facebook' href="{% url socialauth_begin 'facebook' %}?next={% url login_close %}" rel="nofollow" target='_blank'><img src="/media/app/images/sign-up/signup-icon-facebook.png">{% trans 'Login with Facebook' %}</a>
            {% else %}
                {% ifequal app_name 'deezer' %}
                <a class='facebook' href="{% url socialauth_begin 'facebook' %}?next={% url login_close %}" rel="nofollow" target='_blank'><img src="/media/app/images/sign-up/signup-icon-facebook.png">{% trans 'Login with Facebook' %}</a>
                {% else %}
                <a class='facebook' href="{% url socialauth_begin 'facebook' %}?next={{ root }}" rel="nofollow"><img src="/media/app/images/sign-up/signup-icon-facebook.png">{% trans 'Login with Facebook' %}</a>
                {% endifequal %}
            {% endif %}
            </div>
        </div>
        <div class="span6">
            <div class='social-btn'>
            {% if external_login %}
                <a class='twitter' href="{% url socialauth_begin 'twitter' %}?next={% url close %}" rel="nofollow" target='_blank'><img src="/media/app/images/sign-up/signup-icon-twitter.png">{% trans 'Login with Twitter' %}</a>
            {% else %}
                {% ifequal app_name 'deezer' %}
                    <a class='twitter' href="{% url socialauth_begin 'twitter' %}?next={% url close %}" rel="nofollow" target='_blank'><img src="/media/app/images/sign-up/signup-icon-twitter.png">{% trans 'Login with Twitter' %}</a>
                {% else %}
                    <a class='twitter' href="{% url socialauth_begin 'twitter' %}?next={{ root }}{{ next }}" rel="nofollow"><img src="/media/app/images/sign-up/signup-icon-twitter.png">{% trans 'Login with Twitter' %}</a>
                {% endifequal %}
            {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="container-fluid content-zone last">
    <div class='row-fluid'>
        <div class='span12 signup-container'>
            <h2>{% trans 'Email login' %}</h2>
        </div>
    </div>
    <form id='login-form' method='post'>{% csrf_token %}
    <div class='row-fluid signup-container'>
        <div class='span6 signup-input'>
            <input placeholder="{% trans 'Email' %}" type="email" required="required" name="email">
        </div>
        <div class='span6 signup-input'>
            <input placeholder="{% trans 'Password' %}"class="right-input" required="required" type="password" name="password">
        </div>
    </div>
    <div class='row-fluid signup-container'>
        <div class='span12 signup-input'>
            <input id="signup-save-btn" type="submit" value="{% trans 'Login' %}" />
        </div>
    </div>
    </form>
    <div class='row-fluid signup-container'>
        <div class='span12'>
            <a href='{% app_url webapp_signup app_name  %}' id='signup-now'>{% trans 'No account? Register now' %}</a>
            <a href='{% app_url webapp_passreset app_name %}' id='lost-password'>{% trans 'Lost password ?' %}</a>
        </div>
    </div>
</div>