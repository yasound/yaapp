{% load i18n %}

<div class='row'>
    <div class='span12 signup-container'>
        <h2>{% trans "Welcome to Yasound" %}</h2>
        <h3><a class='mobile-signin-link'href="#">{% trans 'Not registered yet ? Create an account' %}</a></h3>
        <h3>{% trans 'Login with Facebook or Twitter' %}</h3>
        <div class='signup-btns'>
            <div class="signup-btn-fbk">
                    {% ifequal sound_player 'deezer' %}
                    <a class='screen-social-btn' href="{% url socialauth_begin 'facebook' %}?next={{ request.path }}" rel="nofollow"><img src="/media/app/images/sign-up/signup-icon-facebook.png">{% trans 'Login with Facebook' %}</a>
                    <a class='mobile-social-btn' href="{% url socialauth_begin 'facebook' %}?next={{ request.path }}" rel="nofollow"><img src="/media/app/images/sign-up/signup-icon-facebook.png">{% trans 'Use Facebook' %}</a>
                    {% else %}
                    <a class='screen-social-btn' href="{% url socialauth_begin 'facebook' %}?next={{ root }}" rel="nofollow"><img src="/media/app/images/sign-up/signup-icon-facebook.png">{% trans 'Login with Facebook' %}</a>
                    <a class='mobile-social-btn' href="{% url socialauth_begin 'facebook' %}?next={{ root }}" rel="nofollow"><img src="/media/app/images/sign-up/signup-icon-facebook.png">{% trans 'Use Facebook' %}</a>
                    {% endifequal %}
            </div>
            <div class="signup-btn-twitter">
                    <a class='screen-social-btn' href="{% url socialauth_begin 'twitter' %}?next={{ root }}{{ next }}" rel="nofollow"><img src="/media/app/images/sign-up/signup-icon-twitter.png">{% trans 'Login with Twitter' %}</a>
                    <a class='mobile-social-btn' href="{% url socialauth_begin 'twitter' %}?next={{ root }}{{ next }}" rel="nofollow"><img src="/media/app/images/sign-up/signup-icon-twitter.png">{% trans 'Use Twitter' %}</a>
            </div>
        </div>
        <div id="signup-separation-line">&nbsp;</div>
        <h3>{% trans 'Email login' %}</h3>
        <form id='login-form' method='post'>{% csrf_token %}
            <div id="signup-input">
                <input placeholder="{% trans 'Email' %}" type="email" required="required" name="email">
                <input placeholder="{% trans 'Password' %}"class="right-input" required="required" type="password" name="password">
                <input id="signup-save-btn" type="submit" value="{% trans 'Login' %}" />
            </div>
        </form>
        <a class='mobile-lost-password'>{% trans 'Lost password ?'}</a>
    </div>
</div>