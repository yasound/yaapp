{% load i18n %}
{% load thumbnail %}
{% load app_url %}

<div class="container-fluid sub-menu">
    <div class="row-fluid">
        <div class="btn-group">
            <a id="selection" href="{% app_url webapp app_name %}" class="btn btn-basic {% ifequal submenu_number 1 %}active{% endifequal %}" >{% trans "Selection" %}</a>
            <a id="top" href="{% app_url webapp_top app_name %}" class="btn btn-basic {% ifequal submenu_number 2 %}active{% endifequal %}" >{% trans "Top" %}</a>
            <a id="friends" href="{% app_url webapp_friends app_name %}" class="btn btn-basic {% ifequal submenu_number 3 %}active{% endifequal %}" >{% trans "People" %}</a>
            <a id="favorites" href="{% app_url webapp_favorites app_name %}" class="btn btn-basic {% ifequal submenu_number 4 %}active{% endifequal %}" >{% trans "Favorites" %}</a>
        </div>
        <div class="dropdown dropdown-genre">
            <a class="btn btn-basic btn-select" data-toggle="dropdown" href="#">{% trans "Filter by genre" %} <i class="asset-select"></i></a>
            <ul class="dropdown-menu">
                <li><a href="#" data-genre=''>{% trans "Clear filter" %}</a></li>
                {% for value, text in genres %}
                <li><a href="#" data-genre='{{ value }}'>{{ text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

