	{% load i18n %}
{% load thumbnail %}        
<div id="sub-header">
    <div class="responsive-container visible-phone">
        <a id='responsive-song'href="{% url webapp_radio current_uuid %}" class='yatooltip'>
            <img id='track-image' src='<% cover %>' width="32" height="32" alt="Radio Picto">
        </a>
        <a id="responsive-play-btn">
            <i class="responsive-icon-play"></i>
        </a>
        <div class='responsive-infos'>
            <div id='responsive-player-artist'>Hello World<% name %></div>
            <div id='responsive-player-title'>Hello World<% name %></div>
        </div>
        <div class="responsive-header-social-btn">
            <img id='responsive-love-btn' src="/media/app/images/responsive-share-icon.png" />
            <img id='responsive-share-btn' src="/media/app/images/responsive-heart-icon-orange.png" />
        </div>
    </div>

    <div class="container hidden-phone" id="sub-header-container">
		<div id="sub-header-pointer" class='menu{{submenu_number}}'></div>
        <ul id="sub-header-nav">
            <li class="first {% ifequal submenu_number 1 %}selected{% endifequal %}">
                <a href='#' class='mobile-selection'></a>
                <a href='#' id="selection">{% trans "Selection" %}</a>
            </li>
            <li class="{% ifequal submenu_number 2 %}selected{% endifequal %}">
                <a href='#' class='mobile-top'></a>
                <a href='#' id='top' >{% trans "Top" %}</a>
            </li>
            <li class="{% ifequal submenu_number 3 %}selected{% endifequal %}">
                <a href='#' class='mobile-friends'></a>
                <a href='#' id='friends'>{% trans "My friends" %}</a>
            </li>
            <li class="{% ifequal submenu_number 4 %}selected{% endifequal %}">
                <a href='#' class='mobile-favorites'></a>
                <a href='#' id='favorites'>{% trans "Favorites" %}</a>
            </li>
        </ul>
        <div>
            <form>
                <div class="genre-selector"><img src="/media/app/images/radio-style-symbol.png" alt="radio symbol"/></div>
                <p id="form" class="jqtransform">
					<div id="fix-genre">
                    {{ genre_form.genre }}
					</div>
				</p>			
            </form>
        </div>
        <div id="sub-header-separation">
        </div>
            {% if request.user.is_authenticated %}
            <a id="create-radio" href="#">
                <span>{% trans "Create radio" %}</span>
            </a>
            {% endif %}
        	<div id="search-bar">
				<input type="text" id="search-input" class="unstyle" placeholder="Rechercher"/>
				<input type="submit" value="" id="search-symbol" class="unstyle"/>
        	</div>
    </div>
</div>
