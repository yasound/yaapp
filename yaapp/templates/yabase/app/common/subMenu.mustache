	{% load i18n %}
{% load thumbnail %}        
<div id="sub-header">
    <div class="container" id="sub-header-container">
		<div id="sub-header-pointer" class='menu{{submenu_number}}'></div>
        <ul id="sub-header-nav">
            <li class="first {% ifequal submenu_number 1 %}selected{% endifequal %}"><a href='#' id="selection">{% trans "Selection" %}</a></li>
            <li class="{% ifequal submenu_number 2 %}selected{% endifequal %}"><a href='#' id='top'>{% trans "Top" %}</a></li>
            <li class="{% ifequal submenu_number 3 %}selected{% endifequal %}"><a href='#' id='friends'>{% trans "My friends" %}</a></li>
            <li class="{% ifequal submenu_number 4 %}selected{% endifequal %}"><a href='#' id='favorites'>{% trans "Favorites" %}</a></li>
        </ul>
        <div>
            <form>
				<div id="radio-style-symbol"><img src="/media/app/images/radio-style-symbol.png" width="6" height="9" alt="Radio Style Symbol">
				</div>      
				<p id="form" class="jqtransform">
					<div class="fix-ff">
                    {{ genre_form.genre }}
					</div>
				</p>			
            </form>
        </div>
        <div id="sub-header-separation">
        </div>
            <a id="create-radio" href="#">
                <span>{% trans "Create radio" %}</span>
            </a>
        	<div id="search-bar">
				<input type="text" id="search-input" class="unstyle" placeholder="Rechercher"/>
				<input type="submit" value="" id="search-symbol" class="unstyle"/>
        	</div>
    </div>
</div>
