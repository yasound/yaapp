{% load i18n %}
        
<div class="navbar navbar-fixed-top" id='header'>
	<div class="navbar-inner">
		<div class="container">
				<div id="brand-logo">
					<a href="brand-logo" {% url webapp %}>
						<img src="/media/app/images/brand-logo.png" width="138" height="23" alt="Logo Yasound">
					</a>
				</div>
				<div class="header-separation">
					<img src="/media/app/images/header-separation.png" width="4" height="54" alt="Header Separation">
				</div>
				<div >
						<input class="input-switch" id="switch1" type="checkbox" />
						<label for="switch1"></label>
				</div>
				<div id="radio-picto">
					<a href="#">
						<img src="/media/app/images/radio-picto.png" width="32" height="32" alt="Radio Picto">
					</a>
				</div>
				<div id="favoris-radio">
					<img src="/media/app/images/favorite-radio.png" width="37" height="36" alt="Favorite Radio">
				</div>
				<div id="play-btn"> 
				</div>
				<div id="sound-level">
					<div id="min-level">
						<img src="/media/app/images/lower-volume.png" width="8" height="10" alt="Lower Volume">
					</div>
					<div id="level-bar">
					</div>
					<div id="max-level">
						<img src="/media/app/images/higher-volume.png" width="11" height="11" alt="Higher Volume">
					</div>
				</div>
			</div>
		<div id="sub-header">
            <div class="container" id="sub-header-container">
                <ul id="sub-header-nav">
                    <li class="first"><a href='#' id="selection">{% trans "Selection" %}</a></li>
                    <li><a href='#' id='top'>{% trans "Top" %}</a></li>
                    <li><a href='#' id='friends'>{% trans "My friends" %}</a></li>
                    <li><a href='#' id='favorites'>{% trans "Favorites" %}</a></li>
                </ul>
                <div>
                    <form>
                        <p id="form">
                            <select name="music-style" id="">
                                <option value="#">Genre</option>
                                <option value="#">Jazz</option>
                                <option value="#">Rock</option>
                                <option value="#">Blues</option>
                                <option value="#">Pop</option>
                                <option value="#">Country</option>
                                <option value="#">Rap</option>
                            </select>
                        </p>
                    </form>
                </div>
                <div id="sub-header-separation">
                </div>
                    <a id="create-radio" href="#">
                        <span> Cr√©er une radio </span>
                    </a>
                	<div id="search-bar">
						<input type="text" id="search-input" class="unstyle" placeholder="Rechercher"/>
						<input type="submit" value="" id="search-symbol" class="unstyle"/>
                	</div>
            </div>
        </div>
	</div>
</div>